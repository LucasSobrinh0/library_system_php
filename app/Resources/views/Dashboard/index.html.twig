{% extends 'base.html.twig' %}

{% block body %}
<h1>Dashboard</h1>

<div class="row">
    <div class="col-md-4">
        <h3>Total de Livros: {{ totalLivros }}</h3>
    </div>
    <div class="col-md-4">
        <h3>Total de Leitores: {{ totalLeitores }}</h3>
    </div>
    <div class="col-md-4">
        <h3>Empréstimos Ativos: {{ emprestimosAtivos }}</h3>
    </div>
</div>

<hr>

<h2>Últimos Livros</h2>
<ul>
    {% for livro in ultimosLivros %}
        <li>{{ livro.title }} ({{ livro.category.title }})</li>
    {% else %}
        <li>Nenhum livro encontrado.</li>
    {% endfor %}
</ul>

<h2>Últimos Empréstimos</h2>
<ul>
    {% for e in ultimosEmprestimos %}
        <li>{{ e.reader.name }} pegou "{{ e.book.title }}" em {{ e.loanDate|date('d/m/Y') }}</li>
    {% else %}
        <li>Nenhum empréstimo registrado.</li>
    {% endfor %}
</ul>
{% endblock %}
